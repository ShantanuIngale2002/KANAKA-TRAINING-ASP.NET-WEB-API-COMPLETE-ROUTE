@model PracticeForTelerickUI01.Models.BookCompleteDataModel

@{
    ViewData["Title"] = "DeleteBook";
}





<div class="mt-3 w-50 align-content-center">
    <div class="text-center my-1">
        <h4>Are you sure you want to delete this book?</h4>
    </div>
    <hr />
    <dl class="row justify-content-center">
        <div class="row col-12 d-flex justify-content-center">
            <dt class="col-sm-4 text-sm-center text-nowrap">
                Book Code
            </dt>
            <dd class="col-sm-4 text-sm-center text-nowrap">
                @Html.DisplayFor(model => model.BookCode)
            </dd>
        </div>
        <div class="row col-12 d-flex justify-content-center">
            <dt class="col-sm-4 text-sm-center text-nowrap">
                Book Name
            </dt>
            <dd class="col-sm-4 text-sm-center text-nowrap">
                @Html.DisplayFor(model => model.BookName)
            </dd>
        </div>
        <div class="row col-12 d-flex justify-content-center">
            <dt class="col-sm-4 text-sm-center text-nowrap">
                Author
            </dt>
            <dd class="col-sm-4 text-sm-center text-nowrap">
                @Html.DisplayFor(model => model.AuthorName)
            </dd>
        </div>


        <div class="row col-12 d-flex justify-content-center mt-3">
            <form asp-action="DeleteBook">
                <input type="hidden" asp-for="BookCode" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
    </dl>
</div>


<div class="my-2">
    <a asp-action="GetAllBooks" class="btn btn-secondary text-nowrap">Goto GridPage</a>
</div>
<div class="mb-2">
    <a asp-action="Index" class="btn btn-secondary text-nowrap">Goto Home page</a>
</div>
















